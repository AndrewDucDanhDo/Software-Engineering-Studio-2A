{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/AndrewDucDanhDo/Software-Engineering-Studio-2A"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "morgan": "^1.10.0",
    "numeric": "^1.2.6"
  },
  "devDependencies": {
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "prod": "node -r esm -r dotenv/config src/index.js",
    "dev": "nodemon --exec \"npm run prod\"",
    "test:unit": "mocha --require esm 'src/**/*.unit.js'",
    "test:integration": "mocha --require esm 'src/**/*.spec.js'",
    "lint": "prettier \"src/**/*.js\" --write",
    "docker-build": "docker build -t ses-2a-backend .",
    "docker-run-prod": "docker run -p 3000:3000 ses-2a-backend",
    "docker-run-dev": "docker run -p 3000:3000 -v $(pwd):/app -e STAGE=\"dev\" ses-2a-backend"
  },
  "nodemonConfig": {
    "delay": "1000",
    "watch": [
      "src"
    ],
    "ext": "js"
  }
}
